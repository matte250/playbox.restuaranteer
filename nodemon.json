{
    "restartable": "rs",
    "ignore": [".git", "node_modules/", "dist/", "coverage/"],
    "watch": ["src/", "prisma/"],
    "execMap": {
      "ts": "node --es-module-specifier-resolution=node --inspect --loader ts-node/esm ./src/index.ts & prisma generate --watch"
    },
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,ts,handlebars",
    "delay": 250,
    "signal": "SIGINT"
}
